{% extends '../baseFront.html.twig' %}

{% block title %}Payement index{% endblock %}

{% block body %}
    <h1>Payement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payement in payements %}
            <tr>
                <td>{{ payement.id }}</td>
                <td>{{ payement.date ? payement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ payement.prix }}</td>
                <td>
                    <a href="{{ path('app_payement_show', {'id': payement.id}) }}">show</a>
                    <a href="{{ path('app_payement_edit', {'id': payement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payement_new') }}">Create new</a>
{% endblock %}
